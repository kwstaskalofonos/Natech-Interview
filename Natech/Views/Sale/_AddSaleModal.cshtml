@{
}

@model SaleView


<div class="modal" id="addSaleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Sale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="Sale">
                    <div class="form-group">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-control" id="AmountAdd" />
                    </div>
                    <div class="input-group-prepend">
                        <label for="inputGroupSelect01">Seller</label>
                    </div>
                    <select asp-for="Seller" asp-items="@Model.sellers" class="custom-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                    </select>
                    <div class="form-group">
                        <button type="button" id="closeSaleModal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" id="submitSale" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
